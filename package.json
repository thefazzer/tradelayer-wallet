{
  "name": "tradelayer-wallet",
  "version": "1.0.0",
  "description": "Official Tradelayer Wallet",
  "author": "Valentin Peshev",
  "license": "ISC",
  "main": "./dist/main.js",
  "private": true,
  "scripts": {
    "start": "electron .",
    "electron:pack": "electron-builder --dir",
    "electron:dist": "electron-builder",
    "electron:build": "webpack --config ./builder/builder-webpack.config.js",
    "electron:build:watch": "webpack --config ./builder/builder-webpack.config.js --watch",
    "server:build": "npm run build --prefix ./packages/wallet-server",
    "server:build:watch": "npm run build:watch --prefix ./packages/wallet-server",
    "fe:build": "npm run build --prefix ./packages/wallet-fe",
    "fe:build:watch": "npm run build:watch --prefix ./packages/wallet-fe",
    "all:install": "npm install & npm install --prefix ./packages/wallet-server & npm install --prefix ./packages/wallet-fe",
    "all:build": "npm run server:build & npm run fe:build & npm run electron:build"
  },
  "dependencies": {
    "@types/node": "^14.17.5",
    "electron": "^13.1.7",
    "electron-builder": "^22.11.7",
    "electron-reloader": "^1.2.1",
    "socket.io": "^4.1.3",
    "socket.io-client": "^4.1.3",
    "ts-loader": "^9.2.4",
    "typescript": "^4.3.5",
    "webpack": "^5.46.0",
    "webpack-cli": "^4.7.2",
    "webpack-node-externals": "^3.0.0"
  }
}
